
[program:nginx]
command=nginx
startretries=6
autorestart=true
autostart=true
user=root

[program:php]
command=php-fpm -F {% if PHP_VERSION|float > 5.5 %}-O{% endif %}
startretries=6
autorestart=true
autostart=true
user=root

[program:cron]
command={% if OS_TYPE == "Debian" %}cron -f{% else %}crond -l 2 -f{% endif %}
startretries=6
autorestart=true
autostart=true
user=root
